<form id="paste-form" method="POST" action="/paste">
    <textarea name="text" rows="10" cols="30"></textarea>
    <input type="submit">
</form>
<script>
    $("#paste-form").on("submit", function(e) {
        e.preventDefault();

        $.ajax({
            type: "POST",
            url: "/api/paste",
            data: $("#paste-form").serialize(),
            dataType: "application/x-www-form-urlencoded",
            success: (data) => {

            },
            error: (err) => {
                alert("ERR");
            }
        });
    });
</script>
